rules_version = '2';

// Firebase Storage 보안 규칙
service firebase.storage {
  match /b/{bucket}/o {
    // 프로필 이미지 규칙
    match /profileImages/{userId}/{fileName} {
      // 읽기: 누구나 가능 (getDownloadURL로 생성된 공개 URL 사용)
      allow read: if true;
      
      // 쓰기(업로드): 본인의 폴더에만 업로드 가능
      allow write: if request.auth != null 
                   && request.auth.uid == userId;
      
      // 삭제: 본인의 파일만 삭제 가능
      allow delete: if request.auth != null 
                    && request.auth.uid == userId;
    }
    
    // 기타 모든 경로는 거부
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

